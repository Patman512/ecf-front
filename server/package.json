{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for Studi's ECF web app.",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "tsstart": "node --loader ts-node/esm src/app.ts",
    "build": "npm run build:static && npx tsc -b",
    "build:static": "for f in $(find src -type f -not -name \"*.ts\" -not -name \"*.js\" -not -name .gitignore); do mkdir -p `dirname $f | sed 's/src/build/'` && cp -f $f `echo $f | sed 's/src/build/'`; done;",
    "clean": "mkdir -p build && rm -rf build/*",
    "clean:all": "pnpm -r clean",
    "watch": "concurrently --kill-others-on-fail \"npm:watch:*(!all)\"",
    "watch:all": "npm -r --parallel watch",
    "watch:ts": "npx tsc -w",
    "watch:static": "find src -type f -not -name \"*.ts\" -not -name \"*.js\" | entr -d npm run build:static;",
    "lint": "eslint  \"src/*.[jt]s\"",
    "lint:fix": "npm run lint --quiet --fix",
    "lint:fix:all": "npm -r lint:fix",
    "prettier": "prettier --check --cache '*.json' 'src/**/*.ts'",
    "prettier:fix": "prettier -w --cache '*.json' 'src/**/*.ts'",
    "prettier:fix:all": "pnpm -r --workspace-concurrency=0 prettier:fix",
    "env": "./tools/scripts/docker-env.sh",
    "env:kill": "./tools/scripts/docker-env.sh --kill",
    "env:restart": "pnpm run env:kill && pnpm run env",
    "init-db": "./tools/scripts/init-db.sh",
    "test": "npx mocha -- -r ts-node/register 'src/tests/**/*.ts'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.5",
    "express": "^4.18.2",
    "mysql2": "^3.6.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/async": "^3.2.22",
    "@types/chai": "^4.3.9",
    "@types/express": "^4.17.20",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.3",
    "@types/nodemailer": "^6.4.13",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
