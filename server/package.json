{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for Studi's ECF web app.",
  "main": "build/app.js",
  "scripts": {
    "tsstart": "node --loader ts-node/esm src/app.ts",
    "env": "./tools/scripts/docker-env.sh",
    "env:kill": "./tools/scripts/docker-env.sh --kill",
    "env:restart": "npm run env:kill && npm run env",
    "init-db": "./tools/scripts/init-db.sh",
    "test": "npx mocha -- -r ts-node/register 'src/tests/**/*.ts'",
    "pm2": "ts-node -T -P server/tsconfig.json server/index.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.5",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.2",
    "mysql2": "^3.6.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/async": "^3.2.22",
    "@types/chai": "^4.3.9",
    "@types/express": "^4.17.20",
    "@types/express-fileupload": "^1.4.4",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.3",
    "@types/nodemailer": "^6.4.13",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
